{% liquid
  assign s = section.settings
  assign image = s.background_image
%}

<section>
  <h1>{{- s.title -}}</h1>
  <h2>{{- s.description -}}</h2>
  {%- render 'component.image', img: image-%}
</section>
  {% schema %}
  {
    "name": "Video Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description"
      }
    ],
    "presets": [
      {
        "name": "Video header"
      }
    ]
  }
  {% endschema %}
</section>
