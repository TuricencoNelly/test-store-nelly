{%- liquid
  assign s = section.settings
-%}

<section>
  <h1>{{- s.title }}</h1>
  <ul>
    {%- for block in section.blocks -%}
      {%- liquid
        assign b = block.settings
      -%}
      <li>
        <a href='{{- b.link -}}'>
          {%- render 'component.image', img: b.image -%}
          <h2>{{- b.title -}}</h2>
        </a>
      </li>
    {%- endfor -%}
  </ul>
</section>

{% schema %}
{
  "name": "Product categories",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "name": "category",
      "type": "category",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "URL"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product categories"
    }
  ]
}
{% endschema %}
